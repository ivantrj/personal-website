---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import RecentPublications from "../components/RecentPublications.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300"
  >
    <Header />
    <main class="flex flex-col justify-center">
      <div class="px-4 md:px-16 flex flex-col gap-4 md:my-10">
        <h1 class="text-2xl md:text-5xl w-full">üëã Hi, I'm Ivan!</h1>
        <p class="w-full text-justify text-base md:text-lg">
          I'm a mobile developer based in Austria.
        </p>
        <p class="w-full text-justify text-base md:text-lg">
          When I'm not coding, you might find me exploring the beautiful
          Austrian landscapes or staying up-to-date with the latest mobile
          development trends and technologies.
        </p>
        <img
          src="https://images.unsplash.com/photo-1538467472788-dc7740301fea?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Astronaut"
        />
        <p class="italic text-xs text-gray-600 dark:text-neutral-400">
          <a
            href="https://unsplash.com/photos/village-below-castle-under-cloudy-sky-during-golden-hour-30RKH7Cf2n8"
            >Unsplash</a
          >
        </p>
      </div>
      <div class="w-full flex flex-col items-center gap-2.5 px-4 lg:px-0 mt-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full">
          <div class="bg-gray-100 dark:bg-neutral-700 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-2">üöÄ What I Do</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>Mobile App Development</li>
              <li>UI/UX Design</li>
              <li>Cross-platform Solutions</li>
              <li>App Performance Optimization</li>
            </ul>
          </div>
          <div class="bg-gray-100 dark:bg-neutral-700 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-2">üõ†Ô∏è Tech Stack</h3>
            <ul class="list-disc list-inside space-y-2">
              <li>iOS (Swift, SwiftUI)</li>
              <li>Android (Kotlin)</li>
              <li>React Native</li>
              <li>Flutter</li>
            </ul>
          </div>
        </div>
      </div>
      <RecentPublications />
    </main>
    <Footer />
  </body>
</html>
