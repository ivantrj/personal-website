---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import RecentPublications from "../components/RecentPublications.astro";
import { Icon } from "astro-iconify";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300"
  >
    <Header />
    <main class="flex flex-col justify-center">
      <div class="px-4 md:px-16 flex flex-col gap-4 md:my-10">
        <h1 class="text-2xl md:text-5xl w-full">ðŸ‘‹ Hi, I'm Ivan!</h1>
        <p class="w-full text-justify text-base md:text-lg">
          I'm a mobile developer based in Austria.
        </p>
        <div class="flex flex-col gap-2">
          <p class="text-md font-medium">Find me on:</p>
          <div class="flex gap-4">
            <a
              href="https://twitter.com/ivan_trj"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon
                name="radix-icons:twitter-logo"
                class="w-6 h-6 text-gray-600 hover:text-gray-500 dark:text-neutral-200"
              />
            </a>
            <a
              href="https://linkedin.com/in/ivantrj"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon
                name="radix-icons:linkedin-logo"
                class="w-6 h-6 text-gray-600 hover:text-gray-500 dark:text-neutral-200"
              />
            </a>
            <a
              href="https://github.com/ivantrj"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon
                name="radix-icons:github-logo"
                class="w-6 h-6 text-gray-600 hover:text-gray-500 dark:text-neutral-200"
              />
            </a>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
          <div class="bg-gray-100 dark:bg-neutral-700 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">ðŸŽ¯ Focus Areas</h3>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="text-sm">Cross-platform Development</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">iOS Native Development</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">AI Integration in Mobile Apps</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">Indie App Development</span>
              </li>
            </ul>
          </div>
          <div class="bg-gray-100 dark:bg-neutral-700 p-6 rounded-lg">
            <h3 class="text-xl font-bold mb-4">ðŸ’» Tech Stack</h3>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <span class="text-sm">Flutter & Dart</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">React Native & TypeScript</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">SwiftUI & Swift</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-sm">Firebase & Supabase</span>
              </li>
            </ul>
          </div>
        </div>

        <img
          src="https://images.unsplash.com/photo-1538467472788-dc7740301fea?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Austrian landscape"
          class="rounded-lg mt-4"
        />
        <p class="italic text-xs text-gray-600 dark:text-neutral-400">
          <a
            href="https://unsplash.com/photos/village-below-castle-under-cloudy-sky-during-golden-hour-30RKH7Cf2n8"
            >Unsplash</a
          >
        </p>
      </div>
      <RecentPublications />
    </main>
    <Footer />
  </body>
</html>
