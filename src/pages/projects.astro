---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Icon } from "astro-iconify";

const projects = [
  {
    title: "Flutter Chat App",
    description: "A real-time chat application built with Flutter and Firebase, featuring modern UI and seamless message synchronization.",
    tech: ["Flutter", "Firebase", "Dart"],
    link: "https://github.com/ivantrj/flutter-chat",
    image: "/project1.png",
    featured: true
  },
  {
    title: "Task Management App",
    description: "A productivity app for managing daily tasks and projects with clean UI and offline support.",
    tech: ["Flutter", "SQLite", "Provider"],
    link: "https://github.com/ivantrj/task-management",
    image: "/project2.png",
    featured: false
  },
  {
    title: "Weather App",
    description: "A beautiful weather application with detailed forecasts and animated weather conditions.",
    tech: ["Flutter", "OpenWeather API", "Bloc"],
    link: "https://github.com/ivantrj/weather-app",
    image: "/project3.png",
    featured: true
  }
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Projects | Ivan Trajanovski" description="Check out my latest mobile development projects" />
  </head>
  <body class="w-full max-w-screen-md mx-auto my-4 dark:bg-neutral-800 dark:text-neutral-300 transition-colors duration-300">
    <Header />
    <main class="flex flex-col justify-center">
      <div class="px-4 md:px-16 flex flex-col gap-4 md:my-10">
        <h1 class="text-2xl md:text-5xl w-full">Projects</h1>
        <p class="w-full text-justify text-base md:text-lg">
          Here are some of the projects I've been working on. These range from mobile apps to experiments with AI integration.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
          {projects.map((project) => (
            <div class="bg-gray-100 dark:bg-neutral-700 rounded-lg overflow-hidden">
              {project.image && (
                <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
              )}
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tech.map((tech) => (
                    <span class="bg-gray-200 dark:bg-neutral-600 px-2 py-1 rounded text-sm">
                      {tech}
                    </span>
                  ))}
                </div>
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm hover:text-gray-600 dark:hover:text-gray-300"
                >
                  View Project <Icon name="radix-icons:arrow-right" class="w-4 h-4" />
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
