---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Main from "@layouts/Main.astro";
---

<Layout title={`Services | ${SITE.title}`}>
  <Header activeNav="services" />
  <Main pageTitle="Services" pageDesc="Consultation and Mobile App Development">
    <section>
      <h2>Consultation</h2>
      <p>Expert advice on mobile app development and strategy.</p>
      <a
        href="mailto:hello.ivantrj@gmail.com?subject=Consultation%20Inquiry"
        class="contact-btn">Contact for Consultation</a
      >
    </section>
    <section>
      <h2>Mobile App Development</h2>
      <p>Custom mobile app development for iOS and Android.</p>
      <a
        href="mailto:hello.ivantrj@gmail.com?subject=Mobile%20App%20Development%20Inquiry"
        class="contact-btn">Contact for App Development</a
      >
    </section>
  </Main>
  <Footer />
</Layout>

<style>
  section {
    @apply mb-8;
  }
  h2 {
    @apply text-2xl font-semibold mb-4;
  }
  p {
    @apply mb-4;
  }
  .contact-btn {
    @apply inline-block bg-skin-accent text-skin-inverted py-2 px-4 rounded hover:opacity-75 transition-opacity;
  }
</style>
