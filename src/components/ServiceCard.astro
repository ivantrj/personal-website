---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="relative group">
  <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-primary-light/20 rounded-xl blur-xl transition-all group-hover:blur-2xl opacity-0 group-hover:opacity-100"></div>
  <div class="relative bg-white rounded-xl p-8 shadow-md hover:shadow-xl transition-all border border-gray-100">
    <div class="w-14 h-14 bg-primary/10 rounded-lg flex items-center justify-center mb-6">
      <span class="text-2xl text-primary" set:html={icon} />
    </div>
    <h3 class="text-xl font-display font-bold text-secondary mb-4">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</div>