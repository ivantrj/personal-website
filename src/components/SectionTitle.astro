---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center mb-16">
  <div class="inline-block">
    <h2 class="text-3xl md:text-4xl font-display font-bold text-secondary relative z-10">
      {title}
      <div class="absolute -bottom-2 left-0 w-full h-3 bg-primary/10 -skew-x-6"></div>
    </h2>
  </div>
  {subtitle && <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">{subtitle}</p>}
</div>